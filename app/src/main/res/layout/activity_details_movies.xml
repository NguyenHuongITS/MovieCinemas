<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background_color"
    tools:context=".View.Activity.DetailsMoviesActivity">

    <!--Banner-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="185dp">

        <ImageView
            android:id="@+id/image_details_banner"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/image_background_banner" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:id="@+id/txt_back_home"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_back_home"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/image_details_avatar"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="20dp"
            android:id="@+id/txt_details_banner"
            android:textColor="@color/title"
            android:gravity="center_vertical"
            android:textSize="24dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="1h 20min"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="140dp"
            android:gravity="left"
            android:textSize="14dp"
            android:textColor="@color/seeall"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="210dp"
            android:text="|"
            android:textSize="16dp"
            android:gravity="top"
            android:textColor="@color/seeall"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Action, Sci-Fi"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="230dp"
            android:textSize="14dp"
            android:textColor="@color/seeall"/>

    </FrameLayout>
    <!--Close banner-->

    <!--Details movies-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    <!--Cinema-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Cinema"
                android:gravity="center_vertical"
                android:textColor="@color/seeall"
                    android:textSize="14dp" />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:text="Logo CGV Blitz Megaplex"
                android:textColor="@color/title"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:textSize="16dp"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_next_page"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_cinemas_details"/>
        </RelativeLayout>
    </LinearLayout>

    <!--seperate-->
        <include layout="@layout/layout_under_line"/>
    <!--Date-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Date"
                android:textColor="@color/seeall"
                android:gravity="center_vertical"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:text="15 Feb, 12:30 PM"
                android:textColor="@color/title"
                android:layout_marginLeft="80dp"
                android:textAlignment="textEnd"
                android:textSize="16dp"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_next_page"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_date_details"/>
        </RelativeLayout>
    </LinearLayout>

    <!--seperate-->
        <include layout="@layout/layout_under_line"/>
    <!--Seats-->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Seats"
                android:textColor="@color/seeall"
                android:gravity="center_vertical"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:text="Row E E1,E2"
                android:textColor="@color/title"
                android:layout_marginLeft="80dp"
                android:textAlignment="textEnd"
                android:textSize="16dp"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_next_page"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_seats_details"/>
        </RelativeLayout>
    </LinearLayout>
    <!--Totals-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="Total"
                android:textColor="@color/seeall"
                android:textSize="14dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="2 tickets"
                android:textColor="@color/tablayoutselect"
                android:textSize="16dp"
                android:layout_marginLeft="55dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="270dp"
                android:text="$21"
                android:textColor="@color/tablayoutselect"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:textSize="22dp"
                tools:ignore="RtlCompat" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <!--Close Details movies-->

    <!--Payment card-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textColor="@color/seeall"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview_payment_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview_add_payment_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!--Close Payment cards-->

    <!--Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/btn_confirm_pay"
                android:text="CONFIRM &amp; PAY"
                android:textColor="@color/title"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gradiant_color_border"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="hold button 3 seconds to confirm &amp; pay"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/seeall"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <!--Close Button-->
</FrameLayout>